@inject IJSRuntime JSRuntime

@code {
    [Parameter]
    public string Title { get; set; } = "Confirmation";

    [Parameter]
    public string Message { get; set; } = "Are you sure you want to proceed?";

    [Parameter]
    public string ConfirmButtonText { get; set; } = "Confirm";

    [Parameter]
    public string CancelButtonText { get; set; } = "Cancel";

    [Parameter]
    public string ConfirmButtonClass { get; set; } = "btn-primary";

    [Parameter]
    public EventCallback<bool> OnConfirmationChanged { get; set; }

    public async Task<bool> ShowAsync()
    {
        return await JSRuntime.InvokeAsync<bool>("confirm", Message);
    }
}
